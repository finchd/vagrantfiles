  #icingaserver server
  config.vm.define "icingaserver".to_sym do |icingaserver_config|
    icingaserver_config.vm.box = "centos-6.4-amd64"
    icingaserver_config.vm.hostname = "icingaserver.local"
    icingaserver_config.hostmanager.enabled = true
    icingaserver_config.hostmanager.aliases = %w(www.icingaserver.local monitor.icingaserver.local icingaserver)
    icingaserver_config.vm.network :private_network, ip: "10.0.1.80"
    #set some machine-specific options	
    icingaserver_config.vm.provider "virtualbox" do |v|
      #change the amount of RAM 
      v.customize ["modifyvm", :id, "--memory", "1024"]
    end
    #Puppet agent provisioning script
    #icingaserver_config.vm.provision :shell, :path => "../provisioning_scripts/ubuntu_1310_puppet_agent_script.sh"
  end

  #an icingaserver client
  config.vm.define "icingaclient1".to_sym do |icingaclient1_config|
    icingaclient1_config.vm.box = "centos-6.4-amd64"
    icingaclient1_config.vm.hostname = "icingaclient1.local"
    icingaclient1_config.hostmanager.enabled = true
    icingaclient1_config.vm.network :private_network, ip: "10.0.1.81"
    #set some machine-specific options	
    icingaclient1_config.vm.provider "virtualbox" do |v|
      #change the amount of RAM 
      v.customize ["modifyvm", :id, "--memory", "512"]
    end
    #Puppet agent provisioning script
    #icingaclient1_config.vm.provision :shell, :path => "../provisioning_scripts/rhel_centos_puppet_agent_script.sh"
  end

  #an icingaserver client
  config.vm.define "icingaclient2".to_sym do |icingaclient2_config|
