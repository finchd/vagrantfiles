# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant::Config.run do |config|
  # All Vagrant configuration is done here. The most common configuration
  # options are documented and commented below. For a complete reference,
  # please see the online documentation at vagrantup.com.

  # Every Vagrant virtual environment requires a box to build off of.
  config.vm.box = "centos-6.4-amd64-minimal"
  
  #Icinga server
  config.vm.define :icingaserver do |nagiosserver_config|
	nagiosserver_config.vm.box = "centos-6.4-amd64-minimal"
	nagiosserver_config.vm.host_name = "icingaserver"
	nagiosserver_config.vm.network :hostonly, "10.0.1.80"
	nagiosserver_config.vm.customize ["modifyvm", :id, "--memory", 1024]
	nagiosserver_config.vm.host_name = "icingaserver"
  end	
  
  #icinga node 1
  config.vm.define :client1 do |client1_config|
	client1_config.vm.box = "centos-6.4-amd64-minimal"
	client1_config.vm.host_name = "client1"
	client1_config.vm.network :hostonly, "10.0.1.81"
	client1_config.vm.customize ["modifyvm", :id, "--memory", 512]
	client1_config.vm.host_name = "client1"
  end	
  
  #icinga node 2
  config.vm.define :client2 do |client2_config|
	client2_config.vm.box = "centos-6.4-amd64-minimal"
	client2_config.vm.host_name = "client2"
	client2_config.vm.network :hostonly, "10.0.1.82"
	client2_config.vm.customize ["modifyvm", :id, "--memory", 512]
	client2_config.vm.host_name = "client2"
  end	
  
  #icinga node 3
  #config.vm.define :nagios3 do |nagios3_config|
	#nagios3_config.vm.box = "centos-6.4-amd64-minimal"
	#nagios3_config.vm.host_name = "client3"
	#nagios3_config.vm.network :hostonly, "10.0.1.83"
	#nagios3_config.vm.customize ["modifyvm", :id, "--memory", 512]
	#nagios3_config.vm.host_name = "client3"
  #end	

  #icinga mail server
  config.vm.define :mail do |mail_config|
	mail_config.vm.box = "centos-6.4-amd64-minimal"
	mail_config.vm.host_name = "mail"
	mail_config.vm.network :hostonly, "10.0.1.84"
	mail_config.vm.customize ["modifyvm", :id, "--memory", 512]
	mail_config.vm.host_name = "mail"
  end	



end
