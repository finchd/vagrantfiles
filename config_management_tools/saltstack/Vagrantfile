    end
    minion5_config.vm.provision :shell, :path => "../provisioning_scripts/ubuntu_saucy_puppet_agent.sh" 
  end

  #another minion server
  config.vm.define "minion6".to_sym do |minion6_config|
    minion6_config.vm.box = "centos-6.5-amd64"
    minion6_config.vm.hostname = "minion6.local"
